<div class="row">
    <div class="col s12 m8 offset-m2">
        <div class="card brown lighten-5">
            <div class="card-content">
                <%= form_for([@event, @paper, @paper.comments.build]) do |form| %>
                    <div class="row">
                        <span class="col s12" id="miLabel">Debate tu revisión aquí *</span><br>
                        <div class="input-field col s12">
                            <%= form.text_area :commentary, class: "quill_container", required: true %>
                        </div>
                    </div>

                    <%= form.hidden_field :user_id, value: current_user.id %>

                    <div class="center-align">
                        <button class="waves-light waves-effect btn-small">
                            <%= form.submit "Añadir comentario", class: "white-text" %>
                        </button>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>