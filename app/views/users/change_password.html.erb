<div class="row">
    <div class="col s12 m8 offset-m2">
        <div class="card brown lighten-5">
            <div class="card-content">
                <h4 align="center">Cambiar contraseña</h4><br>
                <%= form_for @user, :url=>'/users/update_password', :method=>'post' do |f| %>
                    <div class="input-field">
                        <%= f.label :password, 'Nueva contraseña *' %>
                        <%= f.password_field :password, autocomplete: "new-password" %>
                    </div>
                    <div class="input-field">
                        <%= f.label :password_confirmation, 'Repetir nueva contraseña *' %>
                        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                    </div>
                    <div class="input-field">
                        <%= f.label :current_password, 'Contraseña actual *' %>
                        <%= f.password_field :current_password, autocomplete: "current-password" %>
                    </div><br>
                    <div>
                        <p class="required-alert">Los campos marcados con * son obligatorios.</p><br>
                    </div>

                    <div class="center-align">
                        <%= button_tag(class: "btn-small waves-effect waves-light") do %>
                            Cambiar contraseña
                        <% end %>
                    </div>
                <%end%>
            </div>
        </div>
    </div>
</div>
