<div class="row">
    <div class="col s12 m8 offset-m2">
        <div class="card brown lighten-5">
            <div class="card-content">
                <h3 class="center-align">Editar Tribunal</h3>
                <%= form_for([@event, @paper, @assingment]) do |form| %>
                    <div class="input-field col s12">
                        <%= form.label :director_id, 'Director *', class: 'active' %>
                        <%= form.collection_select :director_id, User.all.select{|u| u.role=='director' and u.career==current_user.career} , :id, :complete_name, include_blank: true %>
                    </div>
                    <div class="input-field col s12">
                        <%= form.label :tutor_id, 'Tutor *', class: 'active' %>
                        <%= form.collection_select :tutor_id, User.all.select{|u| u.role=='docente' or u.professor_role==true} , :id, :complete_name, include_blank: true %>
                    </div>
                    <div class="input-field col s12">
                        <%= form.label :relator_id, 'Relator *', class: 'active' %>
                        <%= form.collection_select :relator_id, User.all.select{|u| u.role=='docente' or u.professor_role==true} , :id, :complete_name, include_blank: true %>
                    </div><br>
                    <div class="col s12">
                        <p class="required-alert">Los campos marcados con * son obligatorios.</p><br>
                    </div>

                    <div class="center-align">
                        <%= button_tag(class: "btn-small waves-effect waves-light") do %>
                            Editar tribunal
                        <% end %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>