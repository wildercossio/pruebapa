<div class="row">
  <div class="col s12 m8 offset-m2">
    <div class="card brown lighten-5">
      <div class="card-content">
        <h2 class="center-align">Crear cuenta</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="input-field">
            <%= f.label :name, 'Nombre(s) *' %>
            <%= f.text_field :name, type: "text", class: "validate", autofocus: true %>
          </div>

          <div class="input-field">
            <%= f.label :lastname, 'Apellidos *' %>
            <%= f.text_field :lastname, type: "text", class: "validate" %>
          </div>

          <div class="input-field">
            <%= f.label :username, 'Nombre de usuario *' %>
            <%= f.text_field :username, type: "text", class: "validate" %>
          </div>

          <div class="row">
            <div class="input-field col s6">
              <%= f.label :ci, 'CI' %>
              <%= f.number_field :ci, class: "validate" %>
            </div>

            <div class="input-field col s6">
              <%= f.label :phone, 'Celular' %>
              <%= f.number_field :phone, class: "validate" %>
            </div>
          </div>

          <div class="input-field">
            <%= f.label :career, 'Carrera *', class: 'active' %>
            <%= f.select :career, ['Ingeniería de Sistemas', 'Ingeniería Ambiental', 'Ingeniería Civil', 'Ingeniería Mecatrónica'], include_blank: 'Elige la carrera' %>
          </div>

          <div class="input-field">
            <%= f.label :email, 'Correo electrónico *' %>
            <%= f.email_field :email, autocomplete: "email" %>
          </div>

          <div class="input-field">
            <%= f.label :password, 'Contraseña *' %>
            <% if @minimum_password_length %>
            <!--em>(<%= @minimum_password_length %> characters minimum)</em-->
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="input-field">
            <%= f.label :password_confirmation, 'Repetir contraseña *' %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div><br>
          <div>
              <p class="required-alert">Los campos marcados con * son obligatorios.</p><br>
          </div>

          <div class="center-align">
            <%= button_tag(class: 'btn-small waves-effect waves-light') do %>
              Registrarse
              <% end %>
          </div>
        <% end %><br>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
